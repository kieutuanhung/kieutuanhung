#include<stdio.h>
#include<math.h>
//rivershen
int main(){
	printf("nhap khong gian 2 ma tran: \n");
	int n,m;
	scanf("%d%d",&n,&m);
	int a[n][m],b[n][m];
	printf("nhap mang a: \n");
	for(int i=0;i<n;i++){
		for(int j=0;j<m;j++){
			scanf("%d",&a[i][j]);
		}
	}
	printf("\n");
	printf("nhap mang b: \n");
	for(int i=0;i<n;i++){
		for(int j=0;j<m;j++){
			scanf("%d",&b[i][j]);
		}
	}
	int c[n][m];
	for(int i=0;i<n;i++){
		for(int j=0;j<m;j++){
			c[i][j]=a[i][j]+b[i][j];
		}
	}
	printf("\n");
	printf("mang c=a+b la: ");
	for(int i=0;i<n;i++){
		for(int j=0;j<m;j++){
			printf("%d ",c[i][j]);
		}
		printf("\n");
	}
}
